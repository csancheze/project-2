<div class="row mb-1" id="subtitle">
  <div class="col-12">
    <h2>Welcome {{name}}!</h2>
  </div>
</div>

<div class="row">
{{#if participating.length}}
  <div class="row event-list d-flex justify-content-center mb-1">
    <h3 id="subtitle">This are your upcoming events:</h3>
    {{#each participating as |event|}}
    <div id="event-container" class="col-12 col-md-3 rounded-3 m-3">
      <a href="/event/{{event.id}}" class="btn-outline-primary">
      <div class="p-2" id="event-container btn-outline-primary">
        <h4 class="event-title">{{event.title}}</h4>
        <p style="padding:5px; height: 100px; overflow:auto; box-shadow: inset 0 0 5px black" id="event-data" class="event-content">Details: {{event.content}}</p>
        <h4 style="font-size:1.5em;" id="event-data" class="data_celebration"> Event Date: <br>{{format_date event.date_celebration}} at {{format_time event.date_celebration}}</h4>
        <h4  class="p-1 author">Posted by: {{event.user.name}} on {{format_date date_created}}</h4>
        </div>
        </a>
    </div>
    {{/each}}
    {{else}}
    You don't have any events!
  </div>
  {{/if}}
  </div>
