<div class="row">
  <div class="col-12" id="subtitle">
    <h2>Welcome {{name}}!</h2>
  </div>
</div>

<div class="row">
{{#if events.length}}
  <div class="col-12 event-list" id="subtitle">
    <h3>This are your created events:</h3>
    <div class="row d-flex justify-content-center mt-5">
    {{#each events as |event|}}
    <a href="/event_editor/{{event.id}}" id="my-events" class="rounded-3 col-12 col-sm-3 btn-outline-primary">
      <div class="d-flex justify-content-between title p-2 row ">
        <h4 class="event-title col-12">{{event.title}}</h4>
        <h4 class="col-12 text-center event-date">Event date: {{format_date event.date_celebration}} at {{format_time event.date_celebration}}</h4>
        </div>
        </a>
    {{/each}}
    </div>
  </div>
  {{/if}}
  <div class="col-12 new-event-button d-flex justify-content-center">
         <button type="button" id="new-event-button" onclick="showForm()">+ Add New Event</button>
  </div>
      <div id="close" style="display:none">
      <button class="btn btn-danger" type="button" onclick="showForm()">X</button>
    </div> 
  <div class="row p-0 col-12" style="display:none" id ="myForm">
  <div class="p-4 rounded-3" style="background-color: var(--third-color)">
    <h3>Create new event:</h3>

    <form class="form event-form">
      <div class="form-group">
        <label for="event-title">Title:</label>
        <input class="form-input col-12" type="text" id="event-title" name="event-title" />
      </div>
      <div class="form-group">
        <label for="event-content">Content:</label>
        <textarea class="form-input col-12" type="text" id="event-content" name="event-content"  maxlength="255"/></textarea>
      </div>
      <div class="form-group">
        <label for="event-date">Date:</label>
        <input class="form-input col-12" type="datetime-local" id="event-date" name="event-date" />
      </div>
       <div class="form-group">
        <label for="url">Link:</label>
        <input class="form-input col-12" type="url" name="url" id="url" placeholder="https://example.com" pattern="https://.*" />
      </div>
     
      <div class="form-group row">
        <p class="mt-4 text-center">Please select the Category</p>
        {{#each categories as |category|}}
        <label class="col-6 text-center" for="{{category.name}}">{{category.name}}</label>
        <input class="form-input col-6" type="radio" id="{{category.name}}" name="categoryId" value="{{category.id}}" />
        {{/each}}
      </div>
      <div class="form-group d-flex justify-content-center mt-3">
        <button type="submit" class="btn btn-primary" id="create-button">Create Event</button>
      </div>

    </form>
  </div>
  </div>

  <script src="/js/event.js"></script>