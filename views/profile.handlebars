<div class="row">
  <div class="col-12">
    <h2>Welcome {{name}}!</h2>
  </div>
</div>

<div class="row">
{{#if events.length}}
  <div class="col-12 event-list">
    <h3>User created events:</h3>
    {{#each events as |event|}}
    <div class="row">
      <div class="col-12 border rounded-3 border-5 p-0 border-dark m-2">
      <div class="d-flex justify-content-between title p-2">
        <h4 class="event-title"><a href="/event_editor/{{event.id}}">{{event.title}}</a></h4>
        <h4>{{event.content}}</h4>
        <h4>{{format_date event.date_created}}</h4>
        </div>
        </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  </div>

  <div class="col-md-6">
         <button type="button" onclick="showForm()"><p>+ New Event</p></button>
  </div>
      <div id="close" style="display:none">
      <button type="button" onclick="showForm()">X</button>
    </div> 
  <div class="row login border rounded-3 border-5 p-0 border-dark col-12" style="display:none" id ="myForm">
  <div class="pb-5" style="background-color: var(--third-color)">
    <h3>Create new event:</h3>

    <form class="form event-form ">
      <div class="form-group">
        <label for="event-title">Title:</label>
        <input class="form-input col-12" type="text" id="event-title" name="event-title" />
      </div>
      <div class="form-group">
        <label for="event-content">Content:</label>
        <input class="form-input col-12" type="text" id="event-content" name="event-content" />
      </div>
      <div class="form-group">
        <label for="event-date">Date:</label>
        <input class="form-input col-12" type="datetime-local" id="event-date" name="event-date" />
      </div>
       <div class="form-group">
        <label for="url">Link:</label>
        <input class="form-input col-12" type="url" name="url" id="url" placeholder="https://example.com" pattern="https://.*" />
      </div>
     
      <div class="form-group ">
        <p>Please select the Category</p>
        {{#each categories as |category|}}
        <label for="{{category.name}}">{{category.name}}</label>
        <input class="form-input col-12" type="radio" id="{{category.name}}" name="categoryId" value="{{category.id}}" />
        {{/each}}
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="create-button">Post</button>
      </div>

    </form>
  </div>
  </div>

  <script src="/js/event.js"></script>