<div class="row">
  <div class="col-12">
    <h2>Welcome {{name}}!</h2>
  </div>
</div>

<div class="row">
{{#if events.length}}
  <div class="col-12 event-list">
    <h3>User created events:</h3>
    {{#each events as |event|}}
    <div class="row">
      <div class="col-12 border rounded-3 border-5 p-0 border-dark m-2">
      <div class="d-flex justify-content-between title p-2">
        <h4 class="event-title"><a href="/event/{{event.id}}">{{event.title}}</a></h4>
        <h4>{{event.content}}</h4>
        <h4>{{format_date event.date_created}}</h4>
        </div>
        </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  </div>
  <div class="col-md-6">
        <p>+ New Event</p>
  </div>

  <div class="row login border rounded-3 border-5 p-0 border-dark m-2 col-12">
  <div>
    <h3>Create new event:</h3>

    <form class="form event-form">
      <div class="form-group">
        <label for="event-title">Title:</label>
        <input class="form-input col-12" type="text" id="event-title" name="event-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <input class="form-input col-12" type="text" id="event-content" name="event-content" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="create-button">Post</button>
      </div>
    </form>
  </div>
  </div>

  <script src="/js/dashboard.js"></script>

  <script src="/js/event.js"></script>