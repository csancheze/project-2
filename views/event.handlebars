<div class="row d-flex justify-content-center">
  <div class="col-12 col-sm-7 p-3 rounded-3" id="event-container">
      <div class="d-flex justify-content-between title">
        <h4 class="event-title">{{title}}</a></h4><h6 class="author">Posted by: {{user.name}} on {{format_date date_created}}</h6>
        </div>
        <h3 id="event-data" class="content mb-4">{{content}}</h3>
        <p id="event-data" class="mb-0">Category: {{category.name}}</p>
        <p id="event-data" class="mb-0">Date of the event: {{format_date date_celebration}}</p>
        <h3 id="event-data" class="mb-4">Participants: {{#each participants as |participant|}}
        <span>{{participant.name}}</span>
        {{/each}}</h3>
        <button id="participate-button" data-id="{{id}}" > Participate! </button>
        <button id="dont-button" data-id="{{id}}"> Don't participate</button>
    </div>

    {{#if messages.length}}
  <div class="comment-list p-3 col-12 col-sm-4 rounded-3">
    <h3>Event messages:</h3>
    {{#each messages as |message|}}
     <div class="mb-2 p-2" id="comment"><p>{{message.content}}</p><span id="posted-by">Posted by: {{user.name}} {{format_date date_created}} {{format_time date_created}}</span></div>
    {{/each}}
  </div>
  {{/if}}

    </div>

<div class="row rounded-3 d-flex justify-content-center" style="margin-bottom: 100px">
<form class="form message-form col-5" data-id="{{id}}">
      <div class="form-group m-2">
        <label class="col-12" for="add-message">Add a message:</label>
        <textarea class="form-input col-12" type="text" id="add-message"></textarea>
      </div>
      <div class="form-group d-flex justify-content-center">
        <button class="btn" type="submit" id="message-button">Post</button>
      </div>
      
</form>
</div>

  <script src="/js/message.js"></script>
  <script src="/js/userEvent.js"></script>