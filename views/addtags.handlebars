<div class="row d-flex justify-content-center">
    <div class="col-12 col-sm-7">
    <div>
        <h2 id="subtitle"><b>Event name:</b> {{title}}</h2>
        <p id="subtitle"><b>This event tags:</b></p>
        {{#each event_tags as |tag|}}
        <div id="delete-tag">
        <span> {{tag.tag_name}} </span><button id="delete-tag-button" data-id="{{tag.id}}">âŒ</button>
        </div>
        {{/each}}
    </div>
   
    <div>
    <form class="mb-1" id="new-tag" data-id="{{id}}">
        <textarea id="tag" name="tag" rows="1" cols="40"></textarea>
        <button id="add-tag" type="submit">Add tag</button>
    </form>
    </div>
    </div>
    <div class="col-12 col-sm-3" id="list-tags">
        <h3 id="subtitle"><b>List of all tags:</b>  </h3>
        {{#each tags as |tag|}}
        <div id="tags">
        <span> {{tag.tag_name}} </span>
        </div>
        {{/each}}
    </div>

</div>
<div class="d-flex justify-content-center mt-5 mb-5">
    <a id="goback-button" class="btn"href="/event/{{id}}">Back to event</a>
    </div>
  <script src="/js/tags.js"></script>