<div id="event-container" style="text-align:center; font-size:large">
     <div class="p-3" id="list-tags">
        <h3>List of all tags: </h3>
        {{#each tags as |tag|}}
        <div style="border: solid 3px white; width:fit-content; display:inline-block">
        <span class="p-2" style="font-weight: bold"> {{tag.tag_name}} </span>
        </div>
        {{/each}}
    </div>
     <h4 class="event-title" style="color:var(--third-color)" data-id="{{id}}">Event: {{title}}</h4>
    <div class="p-3">
        <h2>This event tags:</h2>
        {{#each event_tags as |tag|}}
        <div style="border: solid 3px black; width:fit-content; display:inline-block" >
        <span class="p-2" style="font-weight: bold"> {{tag.tag_name}} </span><button style="font-size:small"class="is_button delete-tag" data-id="{{id}}">Delete</button>
        </div>
        {{/each}}
    </div>
   
    <div>
    <form  class="form p-2" id="new-tag" data-id="{{id}}">
        <div class="form-group">
        <textarea class="form-input" id="tag" name="tag" rows="1" cols="50"></textarea>
        <div class="form-group d-flex justify-content-center mt-3">
        <button class="btn is_button" type="submit">Add tag to event</button>
        </div>
        </div>
    </form>
    </div>

    <a class="btn is_button"href="/event/{{id}}">Back to event</a>

</div>
  <script src="/js/tags.js"></script>