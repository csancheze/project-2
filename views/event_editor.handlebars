  <div class="row login border rounded-3 border-5 p-0 border-dark col-12" >
  <div class="pb-5" >
    <h3>Edit event:</h3>

    <form class="form update-event-form" data-id="{{id}}">
      <div class="form-group">
        <label for="event-title">Title:</label>
        <input class="form-input col-12" type="text" id="event-title" name="event-title" placeholder="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="event-content">Content:</label>
        <input class="form-input col-12" type="text" id="update-content" name="event-content" placeholder="{{content}}" />
      </div>
      <div class="form-group">
        <label for="event-date">Date:</label>
        <input class="form-input col-12" type="date" id="event-date" name="event-date" placeholder="{{format_date date_celebration}}" />
      </div>
     
      <div class="form-group ">
        <p>Category : {{category.name}}</p>
        {{#each categories as |category|}}
        <label for="{{category.name}}">{{category.name}}</label>
        <input class="form-input col-12" type="radio" id="{{category.name}}" name="categoryId" value="{{category.id}}">
      
        {{/each}}
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="update-button">Post</button>
      </div>
      <button class="btn btn-primary" id="delete-button" data-id="{{id}}">Delete</button>

    </form>
  </div>
  </div>

  <script src="/js/event_edit.js"></script>