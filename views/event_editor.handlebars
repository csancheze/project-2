  <div class="row p-0 mb-5 col-8 mr-0 mx-auto" >
    
    <h3 id="subtitle">Edit event:</h3>

    <form class="form update-event-form row p-3" data-id="{{id}}">
      <div class="form-group mb-3">
        <label class="row col-12" for="event-title">Title:</label>
        <textarea class="form-input row col-12" type="text" id="event-title" name="event-title"rows="1" cols="50">{{title}}</textarea>
      </div>
      <div class="form-group mb-3">
        <label class="row col-12" for="event-content">Content:</label>
        <textarea class="form-input row col-12" type="text" id="update-content" name="event-content" maxlength="255">{{content}}</textarea>
      </div>
      <div class="form-group mb-3">
        <label class="row col-12" for="event-date">Date:</label>
        <input class="form-input row col-12 col-sm-4" type="datetime-local" id="event-date" name="event-date" value="{{format_date2 date_celebration}}T{{format_time date_celebration}}" />
      </div>
      <div class="form-group p-0">
        <label for="url">Link:</label>
        <input class="form-input col-12" type="url" name="url" id="url" placeholder="{{link}}" pattern="https://.*" />
      </div>

     
      <div class="form-group col-12 col-sm-6">
        <p>Current Category : {{category.name}}</p>
        {{#each categories as |category|}}
        <div class="row">
        <label class="col-6 d-flex justify-content-center" for="{{category.name}}">{{category.name}}</label>
        <input class="form-input col-6 d-flex justify-content-center" type="radio" id="{{category.name}}" name="categoryId" value="{{category.id}}">
        </div>
        {{/each}}
      </div>
      <div class="form-group d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary" id="update-button">Submit Update</button>
      </div>
      <div class="d-flex justify-content-center">
      <button class="btn m-1" id="delete-button" data-id="{{id}}">Delete Event</button>
      </div>
      <div style="width:100%; text-align:center"class="form-group mt-4">
      <a style="border:solid 2px var(--first-color)" class="btn is_button m-1" href="/event/{{id}}">Go to the event</a>
      </div>
    </form>
  
  </div>

  <script src="/js/event_edit.js"></script>