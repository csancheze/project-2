<div class="row border rounded-3 border-5 p-0 border-dark m-2 col-12">
  <div>
    <h3>Update event:</h3>

    <form class="form update-event-form" data-id="{{id}}">
      <div class="form-group">
        <label for="event-title">Title:</label>
        <textarea class="form-input col-12" id="event-title" name="event-title"/>{{title}}</textarea>
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input col-12" id="event-content" name="event-content"/>{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="update-button" data-id="{{id}}">Update</button>
      </div>
    </form>
    <button class="btn btn-primary" id="delete-button" data-id="{{id}}">Delete</button>

  </div>
  </div>

  <script src="/js/event-edit.js"></script>